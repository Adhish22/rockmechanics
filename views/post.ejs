<!DOCTYPE html>
<html lang="en" dir="ltr">
	<%- include("partials/header"); -%>

    <style>
        .heading {
    margin-top: 6px;
    margin-bottom: 10px;
    background-image: linear-gradient(to top, #fff1eb 0%, #ace0f9 100%);
}

h4.title {
    padding: 0px 20px 20px 0px;
    padding-top: 10px;
    font-size: 120%;
}
    </style>

    <div class="heading"><h4 class="title"> <%= posts.title %> </h4></div>

	<img style="float:left; padding-right: 10px;" src="https://img.icons8.com/ios-filled/20/000000/calendar.png">
	<p> <%= posts.date %> </p> <br>
	<img style="width: 888px; height: 500px; margin-left: 11%;"><br><br>
	<p style="font-size: medium;"> <%= posts.content %> </p>
	<br><br>


<form method="post" action="/posts/<%= postId %>">
        <div class="form-group">
            <input type="text" name="userName" class="form-control" placeholder="Enter Your Name">
            <textarea name="commentBody" cols="40" rows="5" class="form-control"></textarea>
        </div>
        <input name="id" type="hidden" id="postId" value="<%= postId %>">
        <button type="submit" name="button" class="btn btn-primary">Submit</button>
</form> 

<% comments.forEach(function(comments){ %>

<div class="form-group">
<h4> <%= comments.name %> </h4> 
<p style="font-size: medium;"> <%= comments.body %> </p>
</div>

<% }) %>
	