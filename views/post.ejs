<!DOCTYPE html>
<html lang="en" dir="ltr">
	<%- include("partials/header"); -%>

    <style>
        .heading {
    margin-top: 6px;
    margin-bottom: 10px;
    background-image: linear-gradient(to top, #fff1eb 0%, #ace0f9 100%);
}

h4.title {
    padding: 0px 20px 20px 0px;
    padding-top: 10px;
    font-size: 120%;
}

.header{
    font-size: 20px;
}

.cname {
    font-size: 17px;
}

.cbody {
    font-size: 15px;
    font-style: italic;
}

.content, .row {
    padding: 2%;
    padding-left: 3%; 
}

.badge {
    background-color: blue;
    color: white;
}

.comments {
    border-style:ridge;
    border-color: #ace0f9;
    padding: 1%;
}

.btn {
    font-size: 14px;

}
    </style>

    <div class="heading"><h4 class="title"> <%= posts.title %> </h4></div>

<div class="content">
	<img style="float:left; padding-right: 10px;" src="https://img.icons8.com/ios-filled/20/000000/calendar.png">
	<p> <%= posts.date %> </p> <br>
	<img style="width: 888px; height: 500px; margin-left: 11%;"><br><br>
	<p class="postBody" style="font-size: medium;"> <%= posts.content %> </p>
</div>    
    <hr>

<div class="content">
<h4 class="header">Leave a Comment:</h4>
      <form role="form" method="post" action="/posts/<%= postId %>">
        <div class="form-group comment ">
            <input type="text" name="userName" class="form-control" placeholder="Enter Your Name">
          <textarea name="commentBody" class="form-control" rows="5" required></textarea>
        </div>
        <input name="id" type="hidden" id="postId" value="<%= postId %>">
        <button type="submit" name="button" class="btn btn-primary">Submit</button>
      </form>
</div>          

<div class="content">
<p><span class="badge"></span> Comments:</p>    
</div>          

<% comments.forEach(function(comments){ %>

<div style="padding-top: 2px;" class="row">    

        <div class="col-4 comments">
          <h4 class="cname"> <%= comments.name %> <small id="date"></small></h4>
          <hr align="left" style="">
          <p class="cbody"><%= comments.body %></p>
        </div>
</div>    

 <% }) %>

   <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script> 
   
   <script>

    $(document).ready(function(){
    $(".badge").html($(".comments").length);
    });


        $(".btn").click(function(){
                                    var time = moment().format("YYYY-MM-DD");
                  $("#date").val(time);  
        });


    </script>

    <%- include("partials/footer"); -%>
